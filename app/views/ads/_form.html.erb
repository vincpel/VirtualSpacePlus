
<h2>Add a book:</h2>
<%= form_for([@user, @user.ads.build]) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :attachment %><br>
    <%= f.file_field :attachment %>
  </p>

  <p>
    <%=  f.submit class: "btn  btn-primary" %>
  </p>
<% end %>

