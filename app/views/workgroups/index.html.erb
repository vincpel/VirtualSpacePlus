<p id="notice"><%= notice %></p>

<h1>Listing Workgroups</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workgroups.each do |workgroup| %>
      <tr>
        <td><%= workgroup.course %></td>
        <td><%= link_to 'Show', workgroup %></td>
        <td><%= link_to 'Edit', edit_workgroup_path(workgroup) %></td>
        <td><%= link_to 'Destroy', workgroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workgroup', new_workgroup_path %>
